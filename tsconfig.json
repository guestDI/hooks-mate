{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2015",
    "lib": ["DOM", "ES6"],
    "jsx": "react",
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
